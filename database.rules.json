{
  "rules": {
    ".read": false,
    ".write": false,

    "products": {
      ".read": true,
      ".write": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".indexOn": ["sku", "category", "subcategory"]
    },

    "clients": {
      ".read": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')"
      }
    },

    "quotes": {
      ".read": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".indexOn": ["project_id", "client_id", "created_at"]
      }
    },

    "projects": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".indexOn": ["clientId", "status", "createdAt"]
      }
    },

    "quote_items": {
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')"
      }
    },

    "cart_items": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "preserved_comments": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "user_profiles": {
      ".read": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin' || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'superadmin')"
      }
    },

    "users": {
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'superadmin' || root.child('users').child(auth.uid).child('role').val() == 'admin')",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'superadmin' || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'superadmin')"
      }
    },

    "search_history": {
      ".read": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".write": "auth != null"
    },

    "app_settings": {
      ".read": true,
      ".write": "auth != null && auth.token.role == 'superadmin'"
    },

    "spareparts": {
      ".read": "auth != null",
      ".write": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".indexOn": ["sku", "warehouse", "stock"]
    },

    "user_approval_requests": {
      ".read": "auth != null && auth.token.role == 'superadmin'",
      ".write": "auth != null",
      ".indexOn": ["status", "requestedAt"]
    },

    "warehouse_stock": {
      ".read": "auth != null",
      ".write": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".indexOn": ["sku", "warehouse", "available", "reserved"]
    },

    "performance_metrics": {
      ".read": "auth != null && auth.token.role == 'superadmin'",
      ".write": "auth != null && auth.token.role == 'superadmin'"
    },

    "errors": {
      ".read": "auth != null && auth.token.role == 'superadmin'",
      ".write": "auth != null",
      ".indexOn": ["resolved", "severity", "category", "timestamp"]
    },

    "backups": {
      ".read": "auth != null && auth.token.role == 'superadmin'",
      ".write": "auth != null && auth.token.role == 'superadmin'",
      ".indexOn": ["timestamp", "type"]
    },

    "backup_metadata": {
      ".read": "auth != null && auth.token.role == 'superadmin'",
      ".write": "auth != null && auth.token.role == 'superadmin'"
    },

    "backup_history": {
      ".read": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".write": "auth != null && (auth.token.role == 'superadmin' || auth.token.role == 'admin')",
      ".indexOn": ["userId", "createdAt", "status", "type"]
    }
  }
}