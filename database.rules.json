      }
    },
    
    "search_history": {
      ".read": "auth != null && auth.token.email == 'andres@turboairmexico.com'",
      ".write": "auth != null"
    },
    
    "app_settings": {
      ".read": true,
      ".write": "auth != null && auth.token.email == 'andres@turboairmexico.com'"
    },
    
    "spareparts": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email == 'andres@turboairmexico.com'",
